<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://code.alibabatech.com/schema/dubbo http://code.alibabatech.com/schema/dubbo/dubbo.xsd">
    <!--提供方应用信息，用于计算机的依赖关系-->
    <dubbo:application name="sayHello"/>
    <!--使用multicast广播注册中心暴露服务地址-->
    <dubbo:registry address="zookeeper://192.168.1.46:2181"/>

    <!--用dubbo协议在20880端口暴露服务-->
    <dubbo:protocol host="192.168.1.46" name="dubbo" port="20880"/>
    
    <!--声明要要暴露的服务接口-->
    <dubbo:service interface="com.kaishengit.DemoService" ref="demoService"/>

    <!--和本地bean一样实现服务-->
    <bean id="demoService" class="com.kaishengit.impl.DemoServiceImpl"/>
</beans>